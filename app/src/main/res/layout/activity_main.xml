<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CT50 Test App"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hardware Validation Suite"
        android:textSize="18sp"
        android:textColor="#666666"
        android:gravity="center"
        android:paddingBottom="30dp" />

    <!-- Scanner Test Button -->
    <Button
        android:id="@+id/btnScannerTest"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="SCANNER TEST"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_blue"
        android:textColor="#FFFFFF" />

    <!-- Database Test Button -->
    <Button
        android:id="@+id/btnDatabaseTest"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="DATABASE TEST"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_green"
        android:textColor="#FFFFFF" />

    <!-- UI Test Button -->
    <Button
        android:id="@+id/btnUITest"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="UI ELEMENTS TEST"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_orange"
        android:textColor="#FFFFFF" />

    <!-- Check Permissions Button -->
    <Button
        android:id="@+id/btnCheckPermissions"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="CHECK PERMISSIONS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_purple"
        android:textColor="#FFFFFF" />

    <!-- Device Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Honeywell CT50\nAndroid 6.0.1"
        android:textSize="14sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="20dp" />

</LinearLayout>